<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="?attr/colorPrimary"
        android:elevation="3dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetEnd="0dp"
        android:contentInsetRight="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:src="@drawable/arrow"
                android:contentDescription="Back"
                android:onClick="onBackButtonClick" />

            <!-- Profile Picture -->

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/groups_image_id"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/new_profile_icon"
                android:layout_marginRight="10dp"
                android:gravity="center"
                />

            <!-- User Name / Title -->
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vasu Tanneru"
                android:shadowColor="@color/white"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/Call_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/call"
                android:paddingLeft="8dp"
                android:contentDescription="Camera"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/video_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:src="@drawable/video34"
                android:contentDescription="Video"
                android:layout_weight="1"/>

            <!-- Menu Icon -->
            <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="2dp"
                android:src="@drawable/menu35"
                android:contentDescription="Menu"
                android:onClick="onuClick"

                />


        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>



    <EditText
        android:id="@+id/searchBox"
        android:layout_width="333dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:maxLines="2"
        android:inputType="textMultiLine"
        android:hint="Type a message.."
        android:textColorHint="@color/white"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginStart="3dp"
    android:background="?attr/colorPrimary"/>

    <Button
        android:id="@+id/button25"
        android:layout_width="67dp"
        android:layout_height="66dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="1dp"
        android:text=">"
        android:textStyle="bold"
        android:textSize="40sp"
        android:gravity="center"
        android:paddingTop="1dp"
        android:background="?attr/colorPrimary"/>


</RelativeLayout>
